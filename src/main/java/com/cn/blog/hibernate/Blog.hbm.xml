<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.cn.blog.entity">
    <class name="Blog" table="blogs">
        <id name="id" type="java.lang.String">
            <column name="id" length="45"/>
            <generator class="uuid"/>
        </id>
        <property name="title" type="java.lang.String">
            <column name="title" length="45"/>
        </property>
        <property name="content" type="java.lang.String">
            <column name="content" length="500"/>
        </property>
        <property name="inputTime" type="java.lang.String">
            <column name="inputTime" length="6"/>
        </property>
        <property name="userId" type="java.lang.String">
            <column name="userId" length="45"/>
        </property>
        <property name="image" type="java.lang.String">
            <column name="image" length="45"/>
        </property>
        <property name="flag" type="java.lang.String">
            <column name="flag" length="45"/>
        </property>
        <property name="categoryId" type="java.lang.String">
            <column name="categoryId" length="45"/>
        </property>
        <property name="categoryPid" type="java.lang.String">
            <column name="categoryPid" length="45"/>
        </property>
        <property name="tagId" type="java.lang.String">
            <column name="tagId" length="45"/>
        </property>
        <property name="viewCount" type="java.lang.Integer">
            <column name="viewCount" length="11"/>
        </property>
        <property name="commentCount" type="java.lang.Integer">
            <column name="commentCount" length="11"/>
        </property>
        <property name="likeCount" type="java.lang.Integer">
            <column name="likeCount" length="11"/>
        </property>
        <property name="order" type="java.lang.Integer">
            <column name="order" length="11"/>
        </property>
        <property name="isComment" type="java.lang.Integer">
            <column name="isComment" length="11"/>
        </property>
    </class>
</hibernate-mapping>

